<style>
  
    .flash
    {
    position: absolute;
    width: 900px;
    height: 116px;
    left: 300px;
    top: 10px;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 300;
    font-size: 36px;
    line-height: 116px;
    color: red;
    }

</style>

{% for notice in app.flashes('notice') %}

      {% if notice  %}
        <div x-data="{show:true}" x-init="setTimeout(()=>show=false, 6000)"x-show="show" class="flash"> 
       <p>
        {{ notice }}
       </p>
  </div>
      {% endif %}
{% endfor %}